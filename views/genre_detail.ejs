<h1>Genre: <%= genre.name %></h1>
<div style="margin-left: 20px;margin-top: 20px;">
   <h2 style="font-size: 1.5rem;">Books</h2>
   <% if (genre_books.length > 0) { %>
      <ul>
      <% genre_books.forEach(function(book) { %>
         <li>
            <a href="<%= book.url %>"><%= book.title %></a>
            (<%= book.summary %>)
         </li>
      <% }); %>
      </ul>
   <% } else { %>
      <p>This genre has no books.</p>
   <% } %>
</div>
<hr>
<div class="ud-container">
   <p><a href="<%= genre.url + '/delete' %>">Delete Genre</a></p></div>
   <p><a href="<%= genre.url + '/update' %>">Update Genre</a></p></div>
</div>

